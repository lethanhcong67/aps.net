
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- page-title -->
<div class="page-title-area item-bg-3">
    <div class="container">
        <div class="page-title-content">
            <h2>Cart</h2>
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        Home
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </li>
                <li>Cart</li>
            </ul>
        </div>
    </div>
</div>
<!-- cart -->
<section class="cart-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <form>
                    <div class="cart-table table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Hình ảnh</th>
                                    <th scope="col">Sản phẩm</th>
                                    <th scope="col">Đơn giá</th>
                                    <th scope="col">Số lượng</th>
                                    <th scope="col">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="product-thumbnail">
                                        <a href="#">
                                            <img src="~/wwwroot/img/cart/1.png"
                                                 alt="item">
                                        </a>
                                    </td>
                                    <td class="product-name">
                                        <a href="@Url.Action("GioHang","SanPham")">Analytical Balances 2</a>
                                    </td>
                                    <td class="product-price">
                                        <span class="unit-amount">$14.00</span>
                                    </td>
                                    <td class="product-quantity">
                                        <div class="input-counter">
                                            <span class="minus-btn">
                                                <i class="fa fa-minus"></i>
                                            </span>
                                            <input type="text" min="1" value="1" spellcheck="false"
                                                   data-ms-editor="true">
                                            <span class="plus-btn">
                                                <i class="fa fa-plus"></i>
                                            </span>
                                        </div>
                                    </td>
                                    <td class="product-subtotal">
                                        <span class="subtotal-amount">$14.00</span>
                                        <a href="@Url.Action("GioHang","SanPham")" class="remove">
                                            <i class="fa fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <div class="cart-buttons">
                        <div class="row align-items-center">
                            <div class="col-lg-7 col-sm-7 col-md-7">
                                <div>
                                    <a href="@Url.Action("Index", "Home")" class=" default-btn">Quay lại</a>
                                </div>
                            </div>
                            <div class="col-lg-5 col-sm-5 col-md-5 text-right">
                                <a href="@Url.Action("GioHang", "SanPham")" class=" default-btn">
                                    Cập nhật giỏ hàng
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="cart-totals">
                        <h3>Tổng tiền</h3>
                        <ul>
                            <li>Tiền hàng<span>$150.00</span></li>
                            <li>Phí vận chuyển<span>$30.00</span></li>
                            <li>Tổng<span><b>$180.00</b></span></li>
                        </ul>
                        <a href="@Url.Action("DatHang", "SanPham")" class="default-btn">Đặt hàng</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

