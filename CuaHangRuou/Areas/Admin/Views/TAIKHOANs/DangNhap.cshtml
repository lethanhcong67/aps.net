
@{
    ViewBag.Title = "DangNhap";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Areas/Admin/Assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Assets/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <link rel="stylesheet" href="~/Areas/Admin/Assets/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Areas/Admin/Assets/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Areas/Admin/Assets/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/Areas/Admin/Assets/images/giano-logo.png" alt="logo">
                            </div>
                            <h4 class="text-center">Đăng nhập</h4>

                            <form class="pt-3" action="/admin/TAIKHOANs/DangNhap" method="post">
                                <div class="form-group">
                                    <input type="text" name="tendn" class="form-control form-control-lg" id="exampleInputUserName" placeholder="Tên tài khoản"
                                           onfocus="changValue(this.name);">
                                    @if (ViewBag.userErrorMsg!=null)
                                    {
                                        <div class="text-danger" id="tendn-err">@ViewBag.userErrorMsg</div>
                                    }
                                </div>
                                <div class="form-group">
                                    <input type="password" name="matkhau" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Mật khẩu"
                                           onfocus="changValue(this.name);">
                                    @if (ViewBag.passwordErrorMsg != null)
                                    {
                                        <div class="text-danger" id="matkhau-err">@ViewBag.passwordErrorMsg</div>
                                    }
                                </div>
                                @if (ViewBag.error != null)
                                {
                                    <div class="text-danger">@ViewBag.error</div>
                                }
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Đăng Nhập</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Areas/Admin/Assets/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <script src="~/Areas/Admin/Assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Areas/Admin/Assets/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Areas/Admin/Assets/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/Areas/Admin/Assets/js/off-canvas.js"></script>
    <script src="~/Areas/Admin/Assets/js/hoverable-collapse.js"></script>
    <script src="~/Areas/Admin/Assets/js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/Areas/Admin/Assets/js/dashboard.js"></script>
    <script src="~/Areas/Admin/Assets/js/data-table.js"></script>
    <script src="~/Areas/Admin/Assets/js/jquery.dataTables.js"></script>
    <script src="~/Areas/Admin/Assets/js/dataTables.bootstrap4.js"></script>
    <!-- End custom js for this page-->
</body>
</html>

<script>
    function changValue(name) {
        document.getElementById(`${name}-err`).style.display = 'none';
    }
</script>