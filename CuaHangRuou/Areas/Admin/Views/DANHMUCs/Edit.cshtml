@model CuaHangRuou.Areas.Admin.Models.DANHMUC

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="d-flex justify-content-between flex-wrap">
                <div class="d-flex align-items-end flex-wrap">
                    <div class="mr-md-3 mr-xl-5">
                        <h2>Xin chào, @Session["TenDN"]</h2>
                        <div class="d-flex">
                            <i class="mdi mdi-home text-muted hover-cursor"></i>
                            <p class="text-muted mb-0 hover-cursor">&nbsp;/&nbsp;Quản lý danh mục&nbsp;&nbsp;/&nbsp;Cập nhật danh mục</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Cập nhật danh mục</h4>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-sample">
                        <p class="card-description">
                            Nhập thông tin danh mục
                        </p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Mã danh mục </label>
                                    <div class="col-sm-9">
                                        @Html.HiddenFor(model => model.MaDM)
                                        @Html.EditorFor(model => model.MaDM, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Tên danh mục <span class="required-field">*</span></label>
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md">
                                <div class="form-group row">
                                    <label class="col-md-2 col-sm-3 col-form-label">Mô tả</label>
                                    <div class="col-md-10 col-sm-9">
                                        @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", @rows = "6" })
                                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a class="nav-link mr-2" href="@Url.Action("QuanLyDanhMuc","DANHMUCs")">
                            <span class="menu-title btn btn-outline-danger btn-fw">Quay lại</span>
                        </a>
                        <p class="nav-link ml-2">
                            <input type="submit" value="Cập nhật" class="btn btn-default menu-title btn btn-outline-success btn-fw" />
                        </p>
                    </div>

                }
            </div>
        </div>
    </div>
</div>



    <div>
        @Html.ActionLink("Quay lại", "QuanLyDanhMuc")
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
